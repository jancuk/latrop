# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Login page
GET     /login                      controllers.UserManagement.loginView
POST    /login                      controllers.UserManagement.login
GET     /logout                     controllers.UserManagement.logout

# User area
# GET     /user/:email                controllers.UserArea.home(email: String)
GET     /home                       controllers.UserArea.home

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
